param(
    [parameter(Position=0, Mandatory=$true)]
    [EnvironmentModules.EnvironmentModule]
    $Module
)

$moduleCandidates = Get-EnvironmentModule -ListAvailable "$($Module.Name)*" -Architecture "$($Module.Architecture)" -Version "$($Module.Version)*" | Sort-Object -Property "Architecture"
$found = $false
foreach($moduleCandidate in $moduleCandidates) {
    if($moduleCandidate.ModuleType -eq [EnvironmentModules.EnvironmentModuleType]::Meta) {
        continue
    }

    if(Test-EnvironmentModuleRootDirectory $moduleCandidate -IncludeDependencies) {
        $found = $True
        Import-EnvironmentModule $moduleCandidate.FullName-IsLoadedDirectly $Module.IsLoadedDirectly
        break
    }
}

if(-not $found) {
    Write-Error "Unable to find an installed module matching name $($Module.Name)"
}